<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.marknguyen.babygenderpredictor.MainActivity"
    tools:showIn="@layout/activity_main">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/home_predict" />


    <TextView
        style="@style/TextAppearance.AppCompat.Widget.ActionMode.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_pick_day"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:text="Boy Or Girl"
        android:textColor="@color/colorAccent"
        android:textSize="45dp"
        android:textStyle="bold" />
    <!--<ImageView-->
    <!--android:id="@+id/sologan"-->
    <!--android:layout_width="150dp"-->
    <!--android:layout_height="150dp"-->
    <!--android:layout_alignParentTop="true"-->
    <!--android:layout_centerHorizontal="true"-->
    <!--android:layout_margin="@dimen/fab_margin"-->
    <!--android:src="@drawable/logo" />-->


    <materialdesign.views.ButtonRectangle
        android:id="@+id/btn_pick_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:text="@string/text_gender_checker"
        android:textStyle="bold"

        />

    <materialdesign.views.ButtonRectangle
        android:id="@+id/btn_pick_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_pick_day"
        android:layout_marginBottom="@dimen/fab_margin"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:text="@string/text_pick_gender"
        android:textStyle="bold" />
</RelativeLayout>
